<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.a99351.cgnoodlenote.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >
        <FrameLayout
            android:id="@+id/fl_body"
            android:layout_width="match_parent"
            android:background="@color/common_bg"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />

        <RadioGroup
            android:id="@+id/rg_home"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/dp_2"
            >
            <RadioButton
                android:id="@+id/rb_charge"
                style="@style/radiobutton_style"
                android:checked="true"
                android:drawableTop="@drawable/selector_home_radiobutton_charge_img"
                android:text="流水"/>
            <RadioButton
                android:id="@+id/rb_order"
                style="@style/radiobutton_style"
                android:drawableTop="@drawable/selector_home_radiobutton_order_img"
                android:text="订单"/>
            <RadioButton
                android:id="@+id/rb_balance"
                style="@style/radiobutton_style"
                android:drawableTop="@drawable/selector_home_radiobutton_balance_img"
                android:text="收益"/>

        </RadioGroup>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
